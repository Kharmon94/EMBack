# Database
DATABASE_URL=postgresql://localhost/backend_development

# Rails
RAILS_ENV=development
RAILS_MAX_THREADS=5
SECRET_KEY_BASE=your_secret_key_base_here

# Devise JWT
DEVISE_JWT_SECRET_KEY=your_devise_jwt_secret_here

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=mainnet-beta
PLATFORM_WALLET_ADDRESS=your_platform_wallet_address
DEV_FEE_PERCENTAGE=0.01

# IPFS / Pinata
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET=your_pinata_api_secret
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# Redis & Sidekiq
REDIS_URL=redis://localhost:6379/0

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Streaming
STREAM_PAYOUT_PER_PLAY=0.001
STREAM_COOLDOWN_MINUTES=5
MAX_STREAMS_PER_HOUR=100

# Ticketing
TICKET_PLATFORM_FEE_PERCENT=0.05
TICKET_PROCESSING_FEE=1.50

# Email (optional)
SMTP_ADDRESS=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_DOMAIN=yourdomain.com
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS S3 (optional fallback storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Livestreaming (optional - Mux, LiveKit, or Agora)
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn

# Railway (production)
RAILWAY_ENVIRONMENT=production

